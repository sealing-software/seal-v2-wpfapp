<Page x:Class="SEAL_V2.view.SettingsPageGroupsPermissions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:controls="clr-namespace:SEAL_V2.view.usercontrolobjects"
      xmlns:local="clr-namespace:SEAL_V2.view"
      mc:Ignorable="d" 
      Title="SettingsPageGroupsPermissions">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Viewbox Stretch="Uniform" HorizontalAlignment="Left" Margin="5,0,5,0">
            <TextBlock Text="Permissions" Style="{DynamicResource StandardTextBlockText}"/>
        </Viewbox>
        <controls:Separator x:Name="AccountSeparator" Height="1" Margin="5,0,5,0" Background="{DynamicResource Separator}" VerticalAlignment="Bottom"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
            <StackPanel x:Name="PermissionsList" Orientation="Vertical" Margin="10"/>
        </ScrollViewer>
    </Grid>
</Page>
